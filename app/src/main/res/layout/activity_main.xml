<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/shape_gradient">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_screening_assistant"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#FF2E364E"
        android:text="@string/open_scanning_assistant"
        />
    <Button
        android:id="@+id/start_phone_scanning"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#FF2E364E"
        android:layout_marginTop="10dp"
        android:text="手机扫码"
        app:layout_constraintTop_toBottomOf="@id/start_screening_assistant"
        />

    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/start_phone_scanning"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:singleLine="false"
        />
    <LinearLayout
        android:id="@+id/create_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/show"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        ></LinearLayout>

</android.support.constraint.ConstraintLayout>