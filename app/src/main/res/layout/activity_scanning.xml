<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scanning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_gradient">

    <TextView
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#00000000"
        android:text="@string/scanning_assistant_title"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/QR_position"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:paddingLeft="50dp"
                android:src="@drawable/test_qr"/>

            <TextView
                android:layout_width="399dp"
                android:layout_height="50dp"
                android:paddingLeft="50dp"
                android:paddingEnd="100dp"
                android:text="请确认手机和盒子(电视)终端连接同一WIFI"
                android:layout_gravity="center"
                android:textSize="12sp" />
            
        </LinearLayout>
       
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:orientation="vertical">
            <TextView
                android:paddingTop="100dp"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:lines="2"
                android:text="1、若没有安装央视影音手机客户端，请扫码下载安装\n2、请打开央视影音手机客户端，在首页进行扫码投屏"/>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="#000a2d">

                <Button
                    android:paddingTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#0000"
                    android:drawableTop="@drawable/cntv_4040"
                    android:text="央视节目"
                    android:textColor="#FFFFFF" />
                <Button
                    android:paddingTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#0000"
                    android:drawableTop="@drawable/cntv_4040"
                    android:text="节日晚会"
                    android:textColor="#FFFFFF"/>
                <Button
                    android:paddingTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#0000"
                    android:drawableTop="@drawable/cntv_4040"
                    android:text="精彩赛事"
                    android:textColor="#FFFFFF"/>
                <Button
                    android:paddingTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#0000"
                    android:drawableTop="@drawable/cntv_4040"
                    android:text="尽情观看"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingEnd="0dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="right"
        android:background="#000a2d">

        <Button
            android:id="@+id/wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#0000"
            android:focusable="false"
            android:drawableLeft="@drawable/wifi_white_3_2014"
            android:drawablePadding="10dp"
            android:textAllCaps="false"
            android:text="网络名称"/>
        <Button
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="#0000"
            android:focusable="false"
            android:drawableLeft="@drawable/tv_2525"
            android:drawablePadding="10dp"
            android:textAllCaps="false"
            android:text="设备名称没写呢没写呢没写呢"/>

    </LinearLayout>
</LinearLayout>
